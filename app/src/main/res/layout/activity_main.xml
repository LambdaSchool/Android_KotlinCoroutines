<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:id="@+id/et_starting_num"
            android:padding="15dp"
            android:hint="Starting Value"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/et_ending_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/et_ending_num"
            android:padding="15dp"
            android:hint="Ending Value"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/et_starting_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            app:layout_constraintTop_toBottomOf="@id/et_starting_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>